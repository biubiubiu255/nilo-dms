<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nilo.dms.dao.SMSLogDao">

    <!-- 实体bean与数据字段对应关系 -->
    <resultMap id="smsLogDo" type="com.nilo.dms.dao.dataobject.SMSLogDO">
        <result property="id" column="id" javaType="java.lang.Long"
                jdbcType="INTEGER"/>
        <result property="msgType" column="msg_type" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="content" column="content" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="receiver" column="receiver" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="waybill" column="waybill" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="status" column="status" javaType="java.lang.Integer"
                jdbcType="INTEGER"/>
        <result property="createdTime" column="created_time" javaType="java.lang.Long"
                jdbcType="INTEGER"/>
        <result property="updatedTime" column="updated_time" javaType="java.lang.Long"
                jdbcType="INTEGER"/>
        <result property="version" column="version" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id ,msg_type,waybill,content,receiver,status,created_time , updated_time ,version
    </sql>

    <!-- 插入语句 -->
    <insert id="insert" parameterType="com.nilo.dms.dao.dataobject.SMSLogDO" statementType="PREPARED"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO t_sys_log_sms
        ( msg_type,waybill,content,receiver,status,created_time , updated_time ,version)
        VALUES
        (#{msgType},#{waybill}, #{content},#{receiver},#{status}, UNIX_TIMESTAMP(NOW()),UNIX_TIMESTAMP(NOW()),UUID())
    </insert>

    <select id="getByWaybill" resultMap="smsLogDo" statementType="PREPARED">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_sys_log_sms where waybill = #{waybill}
    </select>
</mapper>