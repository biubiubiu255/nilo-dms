<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nilo.dms.dao.SMSConfigDao">

    <!-- 实体bean与数据字段对应关系 -->
    <resultMap id="smsConfigDo" type="com.nilo.dms.dao.dataobject.SMSConfigDO">
        <result property="id" column="id" javaType="java.lang.Long"
                jdbcType="INTEGER"/>
        <result property="merchantId" column="merchant_id" javaType="java.lang.String"
                jdbcType="INTEGER"/>
        <result property="smsType" column="sms_type" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="content" column="content" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="name" column="name" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="param" column="param" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="status" column="status" javaType="java.lang.Integer"
                jdbcType="INTEGER"/>
        <result property="createdTime" column="created_time" javaType="java.lang.Long"
                jdbcType="INTEGER"/>
        <result property="updatedTime" column="updated_time" javaType="java.lang.Long"
                jdbcType="INTEGER"/>

        <result property="createdBy" column="created_by" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="updatedBy" column="updated_by" javaType="java.lang.String"
                jdbcType="VARCHAR"/>

        <result property="version" column="version" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id ,merchant_id,sms_type,content,status,param,name,created_time,created_by , updated_time ,updated_by,version
    </sql>


    <select id="getBy" resultMap="smsConfigDo" statementType="PREPARED">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_sys_config_sms where merchant_id = #{merchantId}
        <if test="smsType != null and smsType !='' ">
            and sms_Type = #{smsType}
        </if>
    </select>

    <select id="listBy" resultMap="smsConfigDo" statementType="PREPARED">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_sys_config_sms where 1
        <if test="merchantId != null ">
            and merchant_id = #{merchantId}
        </if>
    </select>


    <!-- 动态更新语句 -->
    <update id="update" parameterType="com.nilo.dms.dao.dataobject.SMSConfigDO" statementType="PREPARED">
        update t_sys_config_sms
        <trim prefix="set" suffixOverrides="," suffix="where merchant_id=#{merchantId} and sms_type = #{smsType}">
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="status != null ">
                status = #{status},
            </if>
            <if test="name != null ">
                name = #{name},
            </if>
            updated_time=UNIX_TIMESTAMP(NOW()),created_by=#{updatedBy},version=UUID()
        </trim>
    </update>


</mapper>