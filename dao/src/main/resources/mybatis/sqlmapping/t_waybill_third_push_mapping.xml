			<if test="ThirdPushDo.status != null">
				status = #{ThirdPushDo.status},
			</if>
			<if test="ThirdPushDo.expressCode != null and ThirdPushDo.expressCode != ''">
				express_code = #{ThirdPushDo.expressCode},
			</if>
			<if test="ThirdPushDo.expressNo != null and ThirdPushDo.expressNo!=''">express_no = #{ThirdPushDo.expressNo}</if>
		</trim>
