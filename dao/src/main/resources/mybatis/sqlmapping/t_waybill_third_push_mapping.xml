		reference_no, express_code, express_no, msg, created_time, status
		)
		values (#{orderId,jdbcType=VARCHAR}, #{orderNo,jdbcType=VARCHAR},
		#{referenceNo,jdbcType=VARCHAR}, #{expressCode,jdbcType=VARCHAR}, #{expressNo,jdbcType=VARCHAR}, #{msg,jdbcType=VARCHAR}, UNIX_TIMESTAMP(NOW()), #{status,jdbcType=INTEGER}
